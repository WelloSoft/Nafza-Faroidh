<Window x:Class="Nafza_Faroidh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nafza_Faroidh"
        mc:Ignorable="d"
        Title="Nafza Faroidh" Height="400" Width="750" FontSize="16">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <GridSplitter Grid.Column="1" Grid.RowSpan="3" Width="4" HorizontalAlignment="Stretch"/>

        <Image Grid.Column="2" Source="pack://application:,,,/Resources/Banner.png" Stretch="Fill" />
        
        <StackPanel>
            <Label HorizontalContentAlignment="Center">Harta</Label>
            <TextBox FontFamily="Consolas" FontSize="24" HorizontalContentAlignment="Center" Margin="0,4,0,4"/>
            <ToggleButton Margin="0,4,0,4">Aul/Rodd</ToggleButton>
        </StackPanel>

        <ListView x:Name="_tipe" Grid.Row="1">
                <ListView.GroupStyle>
                    <GroupStyle >
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="5"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>

        <ListView x:Name="_anggota" Grid.Column="2" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="NAMA" DisplayMemberBinding="{Binding Nama}" Width="200"/>
                    <GridViewColumn Header="STATUS" DisplayMemberBinding="{Binding Nama}" Width="100"/>
                    <GridViewColumn Header="BAGIAN" DisplayMemberBinding="{Binding Nama}" Width="100"/>
                    <GridViewColumn Header="JATAH" DisplayMemberBinding="{Binding Nama}" Width="100"/>
                    <GridViewColumn Header="JATAH %" DisplayMemberBinding="{Binding Nama}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button x:Name="_add" Grid.Row="2" Click="_add_Click">Tambah >></Button>
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="_stat" VerticalContentAlignment="Center" Margin="5">
            </Label>
            <Button x:Name="_about" Grid.Column="3" Content="About" Margin="5" Click="_about_Click"/>
            <Button x:Name="_reset" Grid.Column="1" Content="Reset" Margin="5" Click="_reset_Click"/>
            <Button x:Name="_print" Grid.Column="2" Content="Print" Margin="5" Click="_print_Click"/>
        </Grid>
    </Grid>
</Window>
